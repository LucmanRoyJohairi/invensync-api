generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model inventory_items {
  id         String    @id  @default(uuid()) @db.Uuid
  item_id    String?   @db.Uuid
  store_id   String?   @db.Uuid
  quantity   Int?
  cost   Decimal? @db.Money
  threshold   Int?  // ðŸ”” alert when quantity <= threshold
  expiry_date DateTime?
  updated_at DateTime? @db.Date
}

model inventory_history {
  id         String    @id  @default(uuid()) @db.Uuid
  item_id    String?   @db.Uuid
  store_id   String?   @db.Uuid
  quantity   Int?
  cost   Decimal? @db.Money
  type   String?  // ðŸš¨ stock-in, stock-out, adjustment, sale
  updated_at DateTime? @db.Date
}

model order_items {
  id         String   @id  @default(uuid()) @db.Uuid
  order_id   String   @db.Uuid
  item_id    String?  @db.Uuid
  quantity   Int?
  orders   orders @relation(fields: [order_id], references: [id])
  unit_price Decimal? @db.Money
  sub_total  Decimal? @db.Money
}

model orders {
  id           String    @id  @default(uuid()) @db.Uuid
  store_id     String?  @db.Uuid
  user_id      String?
  order_items order_items[] //relationship
  order_date   DateTime? @db.Date
  status       String?
  total_amount Decimal?  @db.Money
  created_at   DateTime? @default(now())  @db.Date
}

model stores {
  id         String    @id  @default(uuid()) @db.Uuid
  store_name String?
  location   String?
  type       String?
  created_at DateTime? @default(now()) @db.Date
}

model supplier_order_items {
  id          String   @id  @default(uuid()) @db.Uuid
  supplier_id String?
  item_id     String?  @db.Uuid
  quantity    Int?
  unit_cost   Decimal? @db.Money
  sub_total   Decimal? @db.Money
}

model supplier_orders {
  id           String    @id  @default(uuid()) @db.Uuid
  supplier_id  String?
  store_id     String?   @db.Uuid
  order_date   DateTime? @db.Date
  status       String?
  total_amount String?
}

model suppliers {
  id           String    @id  @default(uuid()) @db.Uuid
  name         String?
  contact_name String?
  phone        String?
  email        String?
  address      String?
  created_at   DateTime? @default(now()) @db.Date
}

model users {
  id            String    @id  @default(uuid()) @db.Uuid
  store_id      String?   @db.Uuid
  name          String?
  email         String?   @unique
  password_hash String?
  role          String?
  created_at    DateTime? @default(now()) @db.Date
}
