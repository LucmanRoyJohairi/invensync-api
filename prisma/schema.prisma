generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model inventory_items {
  id         String    @id  @default(uuid()) @db.Uuid
  item_id    String?
  store_id   String?
  quantity   String?
  updated_at DateTime? @db.Date
}

model inventory_stocks {
  id         String    @id  @default(uuid()) @db.Uuid
  item_id    String?
  store_id   String?
  quantity   Int?
  updated_at DateTime? @db.Date
}

model order_items {
  id         String   @id  @default(uuid()) @db.Uuid
  order_id   String?
  item_id    String?
  quantity   Int?
  unit_price Decimal? @db.Money
  sub_total  Decimal? @db.Money
}

model orders {
  id           String    @id  @default(uuid()) @db.Uuid
  store_id     String?
  user_id      String?
  order_date   DateTime? @db.Date
  status       String?
  total_amount Decimal?  @db.Money
  created_at   DateTime? @db.Date
}

model stores {
  id         String    @id  @default(uuid()) @db.Uuid
  store_name String?
  location   String?
  type       String?
  created_at DateTime? @db.Date
}

model supplier_order_items {
  id          String   @id  @default(uuid()) @db.Uuid
  supplier_id String?
  item_id     String?
  quantity    Int?
  unit_cost   Decimal? @db.Money
  sub_total   Decimal? @db.Money
}

model supplier_orders {
  id           String    @id  @default(uuid()) @db.Uuid
  supplier_id  String?
  store_id     String?
  order_date   DateTime? @db.Date
  status       String?
  total_amount String?
}

model suppliers {
  id           String    @id  @default(uuid()) @db.Uuid
  name         String?
  contact_name String?
  phone        String?
  email        String?
  address      String?
  created_at   DateTime? @db.Date
}

model users {
  id            String    @id  @default(uuid()) @db.Uuid
  store_id      Int?
  name          String?
  email         String?
  password_hash String?
  role          String?
  created_at    DateTime? @db.Date
}
